<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
        <td><a href="/cart/<%= item.id %>"> Add To Cart</a></td>
        <td><%= link_to 'Show', item %></td>
        
        <% if current_shopper %>
        <% if current_shopper.email == 'jesseli91@gmail.com' %>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <% if current_shopper %>
  <% if current_shopper.email == 'jesseli91@gmail.com' %>
      <%= link_to 'New Item', new_item_path %>
  <% end %>
  <% end %>